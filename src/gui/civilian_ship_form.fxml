<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.scene.canvas.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/" fx:controller="gui.FerryFormController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Label text="Staff Amount:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="staffAmount" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Maximum Fuel:" GridPane.rowIndex="2" />
        <Label text="Maximum Capacity:" GridPane.rowIndex="3" />
        <Label text="Speed:" GridPane.rowIndex="4" />
        <Label text="Route:" GridPane.rowIndex="5" />
        <TextField fx:id="routeText" GridPane.rowIndex="5" GridPane.columnIndex="1" />
        <Button fx:id="routeButton" mnemonicParsing="false" text="Choose route" GridPane.rowIndex="6" GridPane.columnIndex="1" onAction="#chooseRoute"/>
        <TextField fx:id="maxFuel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="maxCapacity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="speed" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <HBox alignment="BOTTOM_RIGHT" prefHeight="8.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <children>
                <Button mnemonicParsing="false" text="Create New Airliner" />
            </children>
        </HBox>
        <Label fx:id="info"  id="information" text="Information" GridPane.rowIndex="8" />
    </children>
</GridPane>
